        <PackageReference Include="Akka.Coordination.Azure" Version="1.5.45.1" />
        <PackageReference Include="Akka.DependencyInjection" Version="1.5.48" />
        <PackageReference Include="Akka.Discovery.Azure" Version="1.5.45.1" />
        <PackageReference Include="Akka.DistributedData" Version="1.5.48" />
        <PackageReference Include="Akka.Hosting" Version="1.5.48" />
        <PackageReference Include="Akka.Logger.Serilog" Version="1.5.25" />
        <PackageReference Include="Akka.Management" Version="1.5.45.1" />
        <PackageReference Include="Akka.Persistence.Sql.Hosting" Version="1.5.44" />
        <PackageReference Include="Akka.Remote.Hosting" Version="1.5.48" />
        <PackageReference Include="Akka.Serialization.Hyperion" Version="1.5.48" />
        <PackageReference Include="Akkling" Version="0.17.0" />
        <PackageReference Include="Akkling.Persistence" Version="0.17.0" />
        <PackageReference Include="Azure.Messaging.ServiceBus" Version="7.20.1" />
        <PackageReference Include="Microsoft.Extensions.Azure" Version="1.12.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="8.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="8.0" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.0" />
        <PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="8.0" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.0" />
        <PackageReference Include="OpenTelemetry" Version="1.12.0" />
        <PackageReference Include="OpenTelemetry.Exporter.OpenTelemetryProtocol" Version="1.12.0" />
        <PackageReference Include="OpenTelemetry.Exporter.Prometheus.AspNetCore" Version="1.12.0-beta.1" />
        <PackageReference Include="OpenTelemetry.Extensions.Hosting" Version="1.12.0" />
        <PackageReference Include="OpenTelemetry.Instrumentation.AspNetCore" Version="1.12.0" />
        <PackageReference Include="OpenTelemetry.Instrumentation.AWS" Version="1.11.3" />
