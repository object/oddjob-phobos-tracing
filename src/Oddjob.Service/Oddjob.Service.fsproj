    </ItemGroup>
    
    <ItemGroup>
        <Content Include="config\appSettings\appsettings.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="config\appSettings\OddjobSettings.json">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="config\appSettings\OddjobSettings.Stage.json">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="config\appSettings\OddjobSettings.Prod.json">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="config\appSettings\QueuesSettings.json">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="config\appSettings\QueuesSettings.Stage.json">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="config\appSettings\QueuesSettings.Prod.json">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="config\appSettings\QueuesConnections.json">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="..\..\.dockerignore">
            <Link>.dockerignore</Link>
        </Content>
        <Content Include="Dockerfile" />
        <Compile Include="ActorsMetadata.fs" />
        <Compile Include="TraceFilter.fs" />
